.inputArea {
  width: 100%;
  height: 150px;
  border-radius: 5px;
}

.textAreas {
  height: 100%;
  background-color: white;
  width: 100%;
  font-size: 16px;
  padding: 8px;
}


.add-image, .up-pic image {
  margin-top: 2%;
  margin-left: 2%;
  width: 150rpx;
  height: 150rpx;
  color: #ddd;
  font-size: 144rpx;
  line-height: 95%;
  text-align: center;
  background-color: #fff;
  cursor: pointer;
  border-radius: 10rpx;
}

.picture_list {
  padding: 20rpx;
  width: 100%;
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
  justify-content: flex-start;
  align-items: flex-start;
  align-content: flex-start;
}

.picture_item {
  margin: 10px;
  margin-left: 0;
  position: relative;
  width: 160rpx;
  height: 160rpx;
}

.delpicture {
  position: absolute;
  top: -11rpx;
  right: -11rpx;
  color: #fff;
  border-radius: 50%;
  width: 40rpx;
  height: 40rpx;
  z-index: 2;
  line-height: 35rpx;
  text-align: center;
  background-color: #f00;
}

.upload_progress {
  position: absolute;
  top: 0;
  left: 0;
  opacity: 0.7;
  border-radius: 8rpx;
  background-color: #000;
  color: #fff;
  width: 167rpx;
  height: 160rpx;
  text-align: center;
  line-height: 160rpx;
  font-size: 12px;
}

.picture_item image {
  width: 160rpx;
  height: 160rpx;
}

.yes-upload {
  font-weight: 550;
  color: #fff;
  box-sizing: border-box;
  font-size: 18px;
  text-align: center;
  text-decoration: none;
  line-height: 2.3;
  border-radius: 5px;
  background-color: #00cd66;
  margin-top: 20px;
  width: 80%;
  height: 45px;
}

.containerView {
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  background: #eff2fb;
  height: 100%;
}

page {
  cursor: default;
  -webkit-user-select: none;
  user-select: none;
  width: 100%;
  overflow-x: hidden;
  height: 100%;
}

.modal-content-login {
  position: fixed;
  top: 160px;
  right: 15%;
  left: 15%;
  z-index: 9500;
  height: 150px;
  background: white;
  border-radius: 10rpx;
  padding-left: 15px;
  padding-right: 15px;
}

.cancelBtn {
  float: left;
  height: 35px;
  width: 95px;
  padding-top: 10px;
  font-size: 15px;
  background: #eff2fb;
}

.loginBtn {
  float: right;
  height: 35px;
  width: 95px;
  font-size: 15px;
  padding-top: 10px;
  background: #00cd66;
  color: white;
}

.cancelShareBtn {
  float: left;
  height: 35px;
  width: 110px;
  padding-top: 10px;
  margin-left: 10px;
  font-size: 15px;
  background: #eff2fb;
  font-weight: 700;
}

.shareBtn {
  float: right;
  height: 35px;
  width: 110px;
  font-size: 15px;
  padding-top: 10px;
  margin-right: 10px;
  background: #00cd66;
  color: white;
   font-weight: 700;
}

.titleTxtView {
  text-align: center;
  margin-top: 15px;
  float: left;
  margin-left: 10px;
  margin-bottom: 30px;
  font-size: 15px;
  width: 100%;
}

button::after {
  border: none;
}

button {
  background-color: white;
  line-height: 1;
  overflow: flex;
  width: 60px;
  height: 60px;
  padding-left: 0px;
  padding-right: 0px;
  margin-bottom: 10px;
}

.notifyView {
  padding-top: 20px;
}

.notifyText {
  float: left;
  padding-top: 14px;
  height: 40px;
  padding-right: 5px;
}

.notifyBtnView {
  float: left;
  padding-top: 10px;
}

.modal-content-share {
  position: fixed;
  top: 160px;
  right: 10%;
  left: 10%;
  z-index: 9500;
  height: 280px;
  background: white;
  border-radius: 10rpx;
  padding-left: 15px;
  padding-right: 15px;
}

.titleIconView {
  height: 48px;
  width: 100%;
  padding-top: 30px;
}

.success_logo {
  height: 100%;
  width: 100%;
}

.shareBtnView {
  clear: both;
  padding-top: 30px;

}

.shareTitleTxtView {
  text-align: center;
  margin-top: 25px;
  float: left;
  margin-bottom: 30px;
  font-size: 18px;
  font-weight: 700;
  width: 100%;
}
