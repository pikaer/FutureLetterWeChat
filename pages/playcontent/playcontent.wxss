page {
  background-color: #eff2fb;
}

.title {
  font-size: 16px;
  margin-left: 15px;
  margin-top: 20px;
}

.contentView {
  background-color: white;
  border-radius: 3px;
  padding-left: 6px;
  margin-left: 15px;
  margin-right: 15px;
  margin-top: 7px;
  height: 100px;
  font-size: 14px;

}

.inputTextContent {
  height: 100%;
  padding: 6px;
  font-size: 14px;

}

.topTagView {
  margin-top: 20px;
  margin-left: 15px;
  height: 30px;
}

.topTagLeft {
  float: left;
}

.topTagRight {
  float: right;
  margin-right: 20px;
}

.hotContentView {
  margin-left: 15px;
}

.hotTag {
  clear: both;
  margin-top: 10px;
  background-color: white;
  float: left;
  padding-top: 3px;
  padding-bottom: 3px;
  padding-left: 8px;
  padding-right: 8px;
  border-radius: 4px;
  font-size: 14px;
}

.nextBtnView {
  position: fixed;
  bottom: 20px;
  width: 100%;
  display: -webkit-flex;
  align-items: center;
  justify-content: center;
}

.nextBtn_Selected {
  font-weight: 550;
  color: #fff;
  box-sizing: border-box;
  font-size: 18px;
  border-radius: 5px;
  background-color: #00cd66;
  height: 45px;
  width: 80%;
  display: -webkit-flex;
  align-items: center;
  justify-content: center;
}

.nextBtn {
  background-color: #e5e5e5;
  font-weight: 550;
  color: #fff;
  box-sizing: border-box;
  font-size: 18px;
  border-radius: 5px;
  height: 45px;
  width: 80%;
  display: -webkit-flex;
  align-items: center;
  justify-content: center;
}
