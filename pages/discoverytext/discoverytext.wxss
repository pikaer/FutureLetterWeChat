.indexContainer {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  box-sizing: border-box;
  padding: 0;
  font-size: 14rpx;
  color: #000;
  padding-left: 12px;
  padding-right: 12px;
}

.contentArea {
  margin-top: 2px;
  margin-bottom: 8px;
  background-color: white;
  clear: both;
  width: 100%;
  height: 100%;
  border-radius: 6px;
}

.userHead {
  width: 48px;
  height: 48px;
  border-radius: 100%;
  margin-top: 10px;
  margin-left: 8px;
}

.titleView {
  width: 100%;
}

.leftView {
  float: left;
}

.centerView {
  float: left;
  margin-top: 10px;
  margin-left: 8px;
}

.rightView {
  float: right;
  margin-top: 7px;
  width: 30px;
}

.nickNameView {
  font-size: 15px;
}

.timeView {
  font-size: 12px;
  color: #8e8e8e;
}

.bodyView {
  clear: both;
}

.textView {
  font-size: 14px;
  padding-top: 10px;
  padding-bottom: 7px;
  margin-left: 8px;
  margin-right: 8px;
}

.imgView {
  margin-left: 0px;
  margin-right: 0px;
}

.imgCount {
  max-width: 100%;
  margin-bottom: -3px;
  border-bottom-left-radius: 6px;
  border-bottom-right-radius: 6px;
  height: auto;
}

.publishIcon {
  position: fixed;
  bottom: 10px;
  right: 10px;
}

page {
  background-color: #ededed;
  height: 100%;
  font-size: 32rpx;
  line-height: 1.6;
}

.spinner {
  margin: 100px auto 0;
  width: 150px;
  text-align: center;
}

.spinner > div {
  width: 8px;
  height: 8px;
  background-color: #09f;
  border-radius: 100%;
  display: inline-block;
  -webkit-animation: bouncedelay 1.4s infinite ease-in-out;
  animation: bouncedelay 1.4s infinite ease-in-out;
  -webkit-animation-fill-mode: both;
  animation-fill-mode: both;
  margin-left: 5px;
}

.footerSpinner {
  width: 100%;
  height: 40px;
  text-align: center;
  font-size: 14px;
  background-color: white;
}

.spinner .bounce1 {
  -webkit-animation-delay: -0.32s;
  animation-delay: -0.32s;
}

.spinner .bounce2 {
  -webkit-animation-delay: -0.16s;
  animation-delay: -0.16s;
}

@-webkit-keyframes bouncedelay {
  0%, 80%, 100% {
    -webkit-transform: scale(0.0);
  }

  40% {
    -webkit-transform: scale(1.0);
  }
}

@keyframes bouncedelay {
  0%, 80%, 100% {
    transform: scale(0.0);
    -webkit-transform: scale(0.0);
  }

  40% {
    transform: scale(1.0);
    -webkit-transform: scale(1.0);
  }
}

.txtLoding {
  size: 14px;
  color: gray;
  padding-left: 8px;
}

image {
  width: 100%;
  display: inline-block;
  overflow: hidden;
}

.defaultDescView {
  height: 100%;
  width: 100%;
  text-align: center;
  margin-top: 20px;
}

.pullImgView {
  text-align: center;
}

.pullImg {
  width: 30px;
  height: 30px;
}

.pullTxtView {
  font-size: 15px;
  margin-top: 10px;
}

.publishIconView {
  box-shadow: 0px 0px 9px #837c7c;
  border-radius: 100%;
  width: 55px;
  height: 55px;
  font-size: 62rpx;
  text-align: center;
  background-color: white;
  margin-bottom: 20px;
  line-height: 49px;
}

.modal-content {
  position: fixed;
  top: 160px;
  right: 15%;
  left: 15%;
  z-index: 9500;
  height: 250px;
  background: #fff;
  border-radius: 10rpx;
}

.basicInfoAreaView {
  height: 200px;
}

.chatBtnView {
  padding-bottom: 15px;
  text-align: center;
  width: 80px;
  background-color: #00cd66;
  height: 15px;
  margin-left: 90px;
  border-radius: 5px;
  color: white;
  padding-top: 5px;
}

.shareIcon {
  position: relative;
  padding-left: 14px;
  padding-right: 14px;
  box-sizing: border-box;
  font-size: 18px;
  text-decoration: none;
  -webkit-tap-highlight-color: transparent;
  overflow: hidden;
  color: #000;
  background-color: white;
  border: 0px solid rgba(0, 0, 0, 0.2);
}

.shareAction {
  background-color: #fff;
  position: relative;
  padding-left: 0px;
  padding-right: 0px;
  padding-top: 0px;
  padding-bottom: 0px;
  text-align: center;
  font-size: 18px;
  display: block;
}

.popupLayer {
  width: 100%;
  height: 100%;
  position: fixed;
  top: 0;
  left: 0;
  background: #000;
  opacity: 0.2;
  overflow: hidden;
  z-index: 1000;
  color: #fff;
}

.dialog_box {
  border-top-right-radius: 25rpx;
  border-top-left-radius: 25rpx;
  width: 100%;
  overflow: hidden;
  position: fixed;
  bottom: 0;
  left: 0;
  z-index: 2000;
  background: whitesmoke;
  padding-top: 1px;
}

.dialog_title {
  font-size: 16px;
  height: 30px;
  display: flex;
  justify-content: center;
  align-items: center;
  padding: 5px;
  color: black;
}

.dialog_content {
  width: 100%;
  box-sizing: border-box;
  display: flex;
  flex-wrap: nowrap;
  align-items: center;
  margin-bottom: 10px;
}

.shareArea {
  position: relative;
  overflow: hidden;
  background-color: white;
  padding-bottom: 10px;
}

.shareTo {
  text-align: center;
  width: 160rpx;
  height: 160rpx;
  background: white;
  font-size: 28rpx;
  float: left;
  flex-grow: 1;
  margin-left: 20px;
  position: relative;
  margin-bottom: 10px;
  margin-right: 20px;
}

.shareIcon {
  margin-top: 15px;
  margin: auto;
  position: absolute;
  top: 0;
  left: 0;
  bottom: 0;
  right: 0;
}

button::after {
  border: none;
}

button {
  background-color: white;
  line-height: 1;
  overflow: flex;
  width: 65px;
  height: 65px;
  padding-left: 0px;
  padding-right: 0px;
}

.refreshMomentView {
  position: fixed;
  bottom: 80px;
  right: 10px;
}

.refreshImg {
  width: 40px;
  height: 40px;
  margin-bottom: 50px;
  padding-top: 7px;
}
