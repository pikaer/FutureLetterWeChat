.indexContainer {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  box-sizing: border-box;
  background: #f0f4f3;
  padding: 0;
  font-size: 14rpx;
  color: #000;
}

.tabView {
  width: 100%;
  height: 40px;
  background-color: white;
  display: flex;
  align-items: center;
  text-align: center;
  position: fixed;
  top: 0;
}

.tabCheckedView {
  flex-grow: 1;
  font-size: 37rpx;
  color: #4d4d4d;
  height: 30px;
  border-bottom: 2px solid #09f;
  padding-top: 7px;
}

.tabUnCheckedView {
  flex-grow: 1;
  font-size: 37rpx;
  color: #4d4d4d;
}

.topSpinner {
  padding-bottom: 40px;
  width: 100%;
  background-color: white;
  text-align: center;
}

.contentArea {
  margin-bottom: 7px;
  background-color: white;
  clear: both;
  width: 100%;
  height: 100%;
}

.userHead {
  width: 48px;
  height: 48px;
  border-radius: 100%;
  margin-top: 10px;
  margin-left: 8px;
}

.titleView {
  width: 100%;
}

.leftView {
  float: left;
}

.centerView {
  float: left;
  margin-top: 10px;
  margin-left: 8px;
}

.rightView {
  float: right;
  margin-right: 7px;
  margin-top: 7px;
}

.nickNameView {
  font-size: 18px;
}

.timeView {
  font-size: 14px;
  color: #8e8e8e;
}

.bodyView {
  clear: both;
}

.footerView {
  clear: both;
  height: 35px;
  width: 100%;
}

.supportView {
  float: left;
  margin-left: 80px;
}

.commentView {
  float: right;
  margin-right: 80px;
}

.textView {
  font-size: 16px;
  padding-top: 10px;
  padding-bottom: 7px;
  margin-left: 8px;
  margin-right: 8px;
}

.supportTxt {
  float: left;
  font-size: 12px;
  margin-top: 6px;
  margin-left: 5px;
}

.commentTxt {
  float: left;
  font-size: 12px;
  margin-top: 6px;
  margin-left: 5px;
}

.imgView {
  margin-left: 8px;
}

.imgCount {
  max-width: 100%;
  margin-bottom: 3px;
  border-radius: 7px;
}

.publishIcon {
  position: fixed;
  bottom: 0px;
  right: 10px;
}

page {
  background-color: white;
  height: 100%;
  font-size: 32rpx;
  line-height: 1.6;
}

.spinner {
  margin: 100px auto 0;
  width: 150px;
  text-align: center;
}

.spinner > div {
  width: 8px;
  height: 8px;
  background-color: #09f;
  border-radius: 100%;
  display: inline-block;
  -webkit-animation: bouncedelay 1.4s infinite ease-in-out;
  animation: bouncedelay 1.4s infinite ease-in-out;
  -webkit-animation-fill-mode: both;
  animation-fill-mode: both;
  margin-left: 5px;
}

.footerSpinner {
  width: 100%;
  height: 40px;
  text-align: center;
  font-size: 14px;
}

.spinner .bounce1 {
  -webkit-animation-delay: -0.32s;
  animation-delay: -0.32s;
}

.spinner .bounce2 {
  -webkit-animation-delay: -0.16s;
  animation-delay: -0.16s;
}

@-webkit-keyframes bouncedelay {
  0%, 80%, 100% {
    -webkit-transform: scale(0.0);
  }

  40% {
    -webkit-transform: scale(1.0);
  }
}

@keyframes bouncedelay {
  0%, 80%, 100% {
    transform: scale(0.0);
    -webkit-transform: scale(0.0);
  }

  40% {
    transform: scale(1.0);
    -webkit-transform: scale(1.0);
  }
}

.txtLoding {
  size: 14px;
  color: gray;
  padding-left: 8px;
}
