        <view class="shareText">添加收藏</view>
      </view>
    </view>
    <view class='dialog_content'>
      <view class="shareTo" bindtap="deleteItem">
        <button>
          <image class="shareIcon" src="/content/images/delete.svg " />
        </button>
        <view class="shareText">删除</view>
