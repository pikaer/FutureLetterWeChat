<view class="container">
  <view class="fixedView">
    <view class="tabView">
      <view class="userView">
        <view class="headPhotoView">
          <image class="userHead" src="{{basicUserInfo.headPhotoPath}}"></image>
        </view>
        <view class="basicInfoView">
          <view class="nickNameText">{{basicUserInfo.nickName}}</view>
          <view class="countView">
            <view class="coinCountView">
              <view class="countText">金币余额:{{basicUserInfo.totalCoin}}</view>
            </view>
          </view>
        </view>
        <view class="userInfoView">
          <navigator url="../../pages/userinfo/userinfo" class="navigator">
            <view class="navigator-text" style='color:#9d9d9d;'>我的信息</view>
            <view class="navigator-arrow"></view>
          </navigator>
        </view>
      </view>
      <view class="labTags">
        <navigator url="/pages/friendlist/friendlist?type=1&title=我关注的好友" class="attentionView">
          <view class="iconView-all">
            <image class="iconImg" src="/content/images/wallet.png"></image>
          </view>
          <view class="iconText-all">钱包</view>
        </navigator>
        <navigator url="/pages/friendlist/friendlist?type=2&title=我的粉丝" class="fansView">
          <view class="iconView-all">
            <image class="iconImg" src="/content/images/share.png"></image>
          </view>
          <view class="iconText-all">赚金币</view>
        </navigator>
        <navigator url="/pages/friendlist/friendlist?type=3&title=我的访客" class="visitorView">
          <view class="iconView-all">
            <image class="iconServiceImg" src="/content/images/service.png"></image>
          </view>
          <view class="iconText-all">客服</view>
        </navigator>
        <navigator url="/pages/friendlist/friendlist?type=3&title=我的访客" class="visitorView">
          <view class="iconView-all">
            <image class="iconServiceImg" src="/content/images/more.png"></image>
          </view>
          <view class="iconText-all">更多</view>
        </navigator>
      </view>
    </view>
    <view class="momentContainer">
      <view class="titleView">
        <view bindtap="toPublishList" class="itemTitleView">
          <view class="{{currentTab==0?'momentTitleCilick':'momentTitle'}}"> 动态 </view>
        </view>
        <view bindtap="toCollectList" class="itemTitleView">
          <view class="{{currentTab==0?'momentTitle':'momentTitleCilick'}}"> 收藏 </view>
        </view>
      </view>
    </view>
  </view>

  <view class="page-body">
    <view class="page-section page-section-spacing swiper">
      <swiper indicator-dots="{{indicatorDots}}" autoplay="{{autoplay}}" circular="{{circular}}" vertical="{{vertical}}" interval="{{interval}}" duration="{{duration}}" previous-margin="{{previousMargin}}px" next-margin="{{nextMargin}}px" current="{{currentTab}}"
        bindchange="bindChange">
        <!-- 动态 -->
        <swiper-item>
          <scroll-view scroll-y="true" class="momentArea">
            <view class="momentView" wx:for="{{tempMomentList}}" wx:for-index="key" wx:for-item="value" data-index='{{key}}' data-momentId='{{value.momentId}}' data-type='1' bindtap="toMomentDetailPage" bindlongpress="bindlongMomentPress">
              <view class="content">
                <view class="textView">{{value.textContent}}</view>
                <view class="imgView" wx:if="{{value.imgContent!=null&&value.imgContent!=''}}">
                  <image src="{{value.imgContent}}" class="momentImg"  mode="widthFix"></image>
                </view>
                <view class="publishTime">{{value.publishTime}}</view>
              </view>
            </view>
            <view class="placeUseView">没有更多啦</view>
          </scroll-view>
        </swiper-item>

        <!-- 收藏 -->
        <swiper-item>
          <scroll-view scroll-y="true" class="momentArea">
            <view class="momentView" wx:for="{{tempCollectList}}" wx:for-index="key" wx:for-item="value" data-index='{{key}}' data-pickUpId='{{value.pickUpId}}' data-collectId='{{value.collectId}}' data-momentId='{{value.momentId}}' data-type='2' bindtap="toDiscussDetailPage" bindlongpress="bindlongMomentPress">
              <view class="content">
                <view class="textView">{{value.textContent}}</view>
                <view class="imgView" wx:if="{{value.imgContent!=null&&value.imgContent!=''}}">
                  <image src="{{value.imgContent}}" class="momentImg"  mode="widthFix"></image>
                </view>
                <view class="publishTime">{{value.createTime}}</view>
              </view>
            </view>
            <view class="placeUseView">没有更多啦</view>
          </scroll-view>
        </swiper-item>
      </swiper>
    </view>
  </view>
</view>


<!--弹出框start-->
<view class="popupLayer" bindtap="hideModalShare" wx:if="{{showModalStatus}}"></view>
<view class="dialog_box" animation="{{animationData}}" wx:if="{{showModalStatus}}">
  <view class='shareArea'>
    <view class='dialog_title'>更多</view>
    <view class='dialog_content'>
      <view class="shareTo ">
        <button open-type='share'>
          <image class="shareIcon" src="/content/images/weixin.svg"></image>
        </button>
        <view class="shareText">分享好友/群</view>
      </view>
      <view class="shareTo">
        <button bindtap="saveLocal">
          <image class="shareIcon" src="/content/images/baocuntupian.svg"></image>
        </button>
        <view class="shareText">保存本地</view>
      </view>
      <view class="shareTo" bindtap="clearItem">
        <button>
          <image class="shareIcon" src="/content/images/clear.svg"></image>
        </button>
        <view class="shareText ">全部清空</view>
      </view>
      <view class="shareTo" bindtap="deleteItem">
        <button>
          <image class="shareIcon" src="/content/images/delete.svg"></image>
        </button>
        <view class="shareText ">删除</view>
      </view>
    </view>
  </view>
</view>
<!--弹出框end-->