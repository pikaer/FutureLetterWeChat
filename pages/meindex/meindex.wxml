<view class="container">
  <view class="fixedView">
    <view class="tabView">
      <view class="userView" wx:if="{{basicUserInfo.isRegister}}">
        <navigator url="../../pages/userinfo/userinfo" class="headPhotoView">
          <image class="userHead" src="{{basicUserInfo.headPhotoPath}}"></image>
        </navigator>
        <navigator url="../../pages/userinfo/userinfo" class="basicInfoView">
          <view class="nickNameText">{{basicUserInfo.nickName}}</view>
          <view class="editView">
            <image class="editImg" src="/content/images/edit.svg"></image>
          </view>
          <view class="tagAreaView">
            <view class="{{basicUserInfo.gender==1?'genderView':'gender_womanView'}}">
              <view class="genderImgView">
                <image wx:if="{{basicUserInfo.gender==1}}" src="/content/images/gender_man.svg" class="genderImg" />
                <image wx:if="{{basicUserInfo.gender!=1}}" src="/content/images/gender_woman.svg" class="genderImg" />
              </view>
            </view>
            <view class="tagView">{{basicUserInfo.distanceDesc}}</view>
            <view class="tagView">{{basicUserInfo.ageYear}}</view>
            <view class="tagView">{{basicUserInfo.constellation}}</view>
            <view class="tagView">{{basicUserInfo.placeInfo}}</view>
          </view>
          <view class="signatureView">个性签名：{{basicUserInfo.signature}}</view>
        </navigator>
      </view>
      <view class="userView" wx:else>
        <view class="headPhotoView">
          <image class="loginHead" src="/content/images/smile.svg"></image>
        </view>
        <view class="loginInfoView">
          <button open-type="getUserInfo" lang="zh_CN" bindgetuserinfo="bindGetUserInfo" class="loginBtn">点击登录</button>
        </view>
      </view>
    </view>
    <view class="momentContainer">
      <view class="titleView">
        <view bindtap="toPublishList" class="leftTitleView">
          <view class="{{currentTab==0?'momentTitleCilick':'momentTitle'}}">动态</view>
        </view>
        <view bindtap="toCollectList" class="rightTitleView">
          <view class="{{currentTab==1?'momentTitleCilick':'momentTitle'}}">活动</view>
        </view>
      </view>
    </view>
  </view>
  <view class="page-body">
    <view class="page-section page-section-spacing swiper">
      <swiper indicator-dots="{{indicatorDots}}" autoplay="{{autoplay}}" circular="{{circular}}" vertical="{{vertical}}" interval="{{interval}}" duration="{{duration}}" previous-margin="{{previousMargin}}px" next-margin="{{nextMargin}}px" current="{{currentTab}}"
        bindchange="bindChange">
        <!-- 动态 -->
        <swiper-item>
          <scroll-view scroll-y="true" class="momentArea">
            <view class="momentView" hover-class="momentView_Hover" wx:for="{{tempMomentList}}" wx:key="key" wx:for-index="key" wx:for-item="value" data-index='{{key}}' data-momentId='{{value.momentId}}' data-type='1' bindtap="toMomentDetailPage" bindlongpress="bindlongMomentPress">

              <view class="momentTitleView">
                <view class="publishDate">12</view>
                <view class="publishMonth">三月</view>
                <view class="publishYear">2019</view>
              </view>
              <view class="rightContentView">
                <view class="rightTopView">
                  <view class="centerTitleView">
                    <view class="nickName_Left_View">{{value.nickName}}</view>
                    <view class="centerView">
                      <view wx:if="{{value.isHide}}" class="hideTextView">匿名发布</view>
                      <view class="hideTextView">{{value.sourceDesc}}</view>
                    </view>
                  </view>
                  <view class="iconView" data-index='{{key}}' data-momentId='{{value.momentId}}' data-type='1' catchtap='bindlongMomentPress'>
                    <view class="iconfont more" style='font-size:20px'></view>
                  </view>
                </view>
                <view class="content">
                  <view class="textView">{{value.textContent}}</view>
                  <view class="imgView" wx:if="{{value.textContent.length>20}}">
                    <image src="https://pic2.zhimg.com/80/v2-4757053c946344fe0667c16dc529cfdd_720w.jpg" data-imgContent='{{value.imgContent}}' catchtap="previewImg" class="momentImg" mode="aspectFill"></image>
                  </view>
                </view>
              </view>
            </view>
            <view class="placeUseView">没有更多啦</view>
          </scroll-view>
        </swiper-item>
        <!-- 收藏 -->
        <swiper-item>
          <scroll-view scroll-y="true" class="momentArea">
            <view class="momentView" hover-class="momentView_Hover" wx:for="{{tempCollectList}}" wx:key="key" wx:for-index="key" wx:for-item="value" data-index='{{key}}' data-pickUpId='{{value.pickUpId}}' data-collectId='{{value.collectId}}' data-momentId='{{value.momentId}}'
              data-uId='{{value.uId}}' data-type='2' bindtap="toDiscussDetailPage" bindlongpress="bindlongMomentPress">
              <view class="momentTitleView">
                <view wx:if="{{value.isHide}}" class="{{value.gender==2?'left_Hide_WoManView':'left_Hide_ManView'}}" data-isHide='{{value.isHide}}' catchtap='toShowModal'>
                  <image wx:if="{{value.gender==2}}" src="/content/images/gender_woman.svg" class="genderImgHead" />
                  <image wx:else src="/content/images/gender_man.svg" class="genderImgHead" />
                </view>
                <view wx:else data-uId='{{value.uId}}' data-pickUpId='{{value.pickUpId}}' data-isHide='{{value.isHide}}' class="leftView" catchtap="toShowModal">
                  <image src="{{value.headImgPath}}" class="userTitleHead" />
                </view>
              </view>
              <view class="centerTitleView">
                <view class="topHeadView">
                  <view class="nickNameView">{{value.nickName}}</view>
                  <view class="onlineView" wx:if="{{value.onLineDesc!=''}}">
                    <mp-badge style="margin-left: 5px;margin-right: 5px;float:left;padding-top:1rpx;" ext-class="blue" />
                    <view class="onlineTextView">{{value.onLineDesc}}</view>
                  </view>
                </view>
                <view class="centerView">
                  <view wx:if="{{!value.isHide}}" class="{{value.gender==1?'genderView':'gender_womanView'}}">
                    <view class="genderImgView">
                      <image wx:if="{{value.gender==1}}" src="/content/images/gender_man.svg" class="genderImg" />
                      <image wx:if="{{value.gender!=1}}" src="/content/images/gender_woman.svg" class="genderImg" />
                    </view>
                  </view>
                  <view class="timeDescView">{{value.createTime}}</view>
                  <view wx:if="{{value.isHide}}" class="hideTextView">匿名发布</view>
                  <view class="userPlaceView">
                    <view class="iconfont dingwei" style="font-size:10px;float:left;color:#8e8e8e;"></view>
                    <view class="distanceDescView">{{value.distanceDesc}}</view>
                  </view>
                </view>
              </view>
              <view class="iconView" data-index='{{key}}' data-pickUpId='{{value.pickUpId}}' data-collectId='{{value.collectId}}' data-momentId='{{value.momentId}}' data-type='2' catchtap='bindlongMomentPress'>
                <view class="iconfont more" style='font-size:20px'></view>
              </view>
              <view class="content">
                <view class="textView">{{value.textContent}}</view>
                <view class="imgView" wx:if="{{value.imgContent!=null&&value.imgContent!=''}}">
                  <image src="{{value.imgContent}}" data-imgContent='{{value.imgContent}}' catchtap="previewImg" class="momentImg" mode="aspectFill"></image>
                </view>

              </view>
            </view>
            <view class="placeUseView">没有更多啦</view>
          </scroll-view>
        </swiper-item>
      </swiper>
    </view>
  </view>
</view>


<!--弹出框start-->
<mp-halfScreenDialog show="{{showModalStatus}}" closabled="{{false}}">
  <view slot="footer" class='shareArea'>
    <view class='dialog_content'>
      <view class="shareTo" bindtap="clearItem">
        <button>
          <image class="shareIcon" src="/content/images/clear.svg"></image>
        </button>
        <view class="shareText ">全部清空</view>
      </view>
      <view class="shareTo" bindtap="deleteItem">
        <button>
          <image class="shareIcon" src="/content/images/delete.svg"></image>
        </button>
        <view class="shareText ">删除</view>
      </view>
      <view class="shareTo ">
        <button open-type='share'>
          <image class="shareIcon" src="/content/images/weixin.svg"></image>
        </button>
        <view class="shareText">分享好友/群</view>
      </view>
    </view>
  </view>
</mp-halfScreenDialog>
<!--弹出框end-->