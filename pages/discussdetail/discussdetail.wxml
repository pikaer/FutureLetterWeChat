<view class="contentArea">
  <view class="titleView">
    <view class="leftView">
      <image src="{{discussDetail.headImgPath}}" class="userHead"></image>
    </view>
    <view class="centerView">
      <view class="nickNameView">{{discussDetail.nickName}}</view>
      <view class="timeView">{{discussDetail.createTime}}</view>
    </view>
  </view>
  <view class="bodyView">
    <!-- 文本动态 -->
    <view class="textView">{{discussDetail.textContent}}</view>
    <!-- 图片动态 -->
    <view class="imgView" wx:if="{{discussDetail.imgContent!=null&&discussDetail.imgContent!=''}}">
      <image src="{{discussDetail.imgContent}}" data-imgContent='{{discussDetail.imgContent}}' catchtap="previewImg" class="imgCount"></image>
    </view>
  </view>
  <view class="lineView"></view>
  <!-- 评论信息列表 -->
  <view class="discussArea">
    <view class="discussView" wx:for="{{discussDetailList}}" wx:for-index="key" wx:for-item="value">
      <view class="leftView">
        <image src="{{value.headImgPath}}" class="userHead"></image>
      </view>
      <view class="centerView">
        <view class="nickNameView">{{value.nickName}}</view>
        <view class="timeView">{{value.recentChatTime}}</view>
      </view>
      <view class="discussContent">{{value.textContent}}</view>
      <view class="lineView"></view>
    </view>
  </view>
  <!-- 发送评论输入区域 -->
  <view class="inputarea">
    <view class="chatLineView"></view>
    <view class="viewinput">
      <input auto-focus placeholder="输入评论" value='{{discussContent}}' bindinput="discussContentInput" />
    </view>
    <view class="viewSend" data-idx='{{partnerId}}' bindtap="insertDiscussContent">
      <view class="txtSend">发 送</view>
    </view>
    <view class="chatLineView"></view>
  </view>
</view>