.contentArea {
  margin-bottom: 7px;
  background-color: white;
  clear: both;
  width: 100%;
}

.titleView {
  width: 100%;
}

.leftView {
  float: left;
}

.userHead {
  width: 42px;
  height: 42px;
  border-radius: 100%;
  margin-top: 10px;
  margin-left: 8px;
}

.centerView {
  float: left;
  margin-top: 10px;
  margin-left: 8px;
}

.nickNameView {
  font-size: 14px;
}

.timeView {
  font-size: 11px;
  color: #8e8e8e;
}

.imgView {
  margin-left: 0px;
  margin-right: 0px;
}

.discussView {
  clear: both;
}

.discussArea {
  margin-bottom: 70px;
}

.discussContent {
  clear: both;
  font-size: 14px;
  padding-top: 0px;
  margin-left: 58px;
  margin-bottom: 8px;
}

.inputarea {
  width: 100%;
  background-color: rgb(243, 243, 243);
  position: fixed;
  bottom: 0px;
}

.chatLineView {
  margin: 0 auto;
  width: 100%;
  height: 1.5rpx;
  background-color: #e5e5e5;
  clear: both;
}

.viewinput {
  width: 80%;
  background-color: white;
  float: left;
  margin-top: 10px;
  margin-left: 10px;
  margin-right: 10px;
  margin-bottom: 10px;
  font-size: 30rpx;
  height: 60rpx;
  border-radius: 7rpx;
  padding-bottom: 7px;
}

.viewSend {
  float: left;
  margin-top: 11px;
  margin-left: 0px;
}

.txtSend {
  width: 40px;
  height: 28px;
  background: #7fff00;
  padding-left: 4px;
  padding-right: 3px;
  border-radius: 5px;
  font-size: 14px;
  text-align: center;
  padding-top: 4px;
}

input {
  display: block;
  height: 1.4rem;
  text-overflow: clip;
  overflow: hidden;
  white-space: nowrap;
  font-family: UICTFontTextStyleBody;
  min-height: 1.4rem;
  padding-top: 5px;
  padding-left: 5px;
}

.discussSupportCount {
  float: right;
  margin-left: 5px;
  margin-top: 4px;
}

.bodyView {
  clear: both;
}

.textView {
  font-size: 16px;
  padding-top: 10px;
  padding-bottom: 7px;
  margin-left: 8px;
  margin-right: 8px;
}

.imgCount {
  width: 100%;
  border-radius: 4px;
}

page {
  background-color: #f0f4f3;
  height: 100%;
  font-size: 32rpx;
  line-height: 1.6;
}

.indexContainer {
  padding-bottom: 15px;
}

.subContainer {
  margin-left: 14px;
  margin-right: 14px;
  margin-top: 14px;
  background: white;
  box-shadow: 0px 0px 9px #837c7c;
  border-radius: 10px;
}

.mainContainer {
  margin: 8px;
}
